@model app_source.Models.CompanyModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center">Editar Empresa</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <label asp-for="Nombre" class="control-label"></label>
            <div class="input-group mb-2">
                <span class="input-group-text" id="inputGroup-sizing-default"><i class="bi bi-building"></i></span>
                <input asp-for="Nombre" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>


            <label asp-for="TipoNegocio" class="control-label"></label>
            <div class="input-group mb-2">
                <span class="input-group-text" id="inputGroup-sizing-default"><i class="bi bi-building-gear"></i></span>
                <input asp-for="TipoNegocio" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"  class="form-control" />
                <span asp-validation-for="TipoNegocio" class="text-danger"></span>
            </div>

            <label asp-for="PaisBase" class="control-label"></label>
            <div class="input-group mb-2">
                <span class="input-group-text" id="inputGroup-sizing-default"><i class="bi bi-globe"></i></span>
                <input asp-for="PaisBase" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" class="form-control" />
                <span asp-validation-for="PaisBase" class="text-danger"></span>
            </div>

            <label asp-for="ValorEstimado" class="control-label"></label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="inputGroup-sizing-default"><i class="bi bi-coin"></i></span>
                <input asp-for="ValorEstimado" class="form-control" />
                <span asp-validation-for="ValorEstimado" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" class="text-danger"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-text">
                    <input class="form-check-input" asp-for="EsTransnacional" />
                </div>
                <p class="form-control m-0"> @Html.DisplayNameFor(model => model.EsTransnacional) </p>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" value="Confirmar" class="me-2 btn btn-success" />
                <a asp-action="Index" class="ms-2 btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
