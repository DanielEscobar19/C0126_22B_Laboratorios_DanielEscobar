@model IEnumerable<app_source.Models.CompanyModel>

@{
    ViewData["Title"] = "Index";
}



<div class="d-flex justify-content-between my-3">
    <span class="h2 m-0">Lista de empresas</span>
    <a name="botonAgregarEmpresa" asp-action="Create" class="btn btn-primary text-center">Agregar empresa</a>
</div>
<table class="table table-hover table-primary">
    <thead>
        <tr class="table-dark text-center">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoNegocio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorEstimado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsTransnacional)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="text-center align-middle ">
            <td id="nombreEmpresa">
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td id="tipoNegocio">
                @if (item.TipoNegocio == null) {
                        <p class="m-0 p-0">Desconocido</p>
                } else
                {
                    @Html.DisplayFor(modelItem => item.TipoNegocio)
                }
            </td>
            <td id="paisBase">
                @if (item.PaisBase == null)
                {
                    <p class="m-0 p-0">Desconocido</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.PaisBase)
                }
            </td>
            <td id="valorEstimado">
                @if (item.ValorEstimado == null)
                {
                    <p class="m-0 p-0">Desconocido</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.ValorEstimado)
                }
            </td>
            <td id="esTransnacional">
                @if (item.EsTransnacional == true)
                {
                    <p class="m-0 p-0">Sí</p>

                } else
                {
                    <p class="m-0 p-0">No</p>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" name="botonEditarEmpresa" class="hovertext btn btn-primary my-1" data-hover="Editar empresa"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" name="botonEliminarEmpresa" class="hovertext btn btn-danger" data-hover="Eliminar empresa"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
